<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>%d %highlight{%p} %style{%C{1.} [%t] %m}{bold,green}%n</pattern>
            </PatternLayout>
        </Console>

        <RollingFile name="RollingFile" fileName="./logs/main.log" filePattern="./logs/$${date:yyyy-MM}/main-%d{yyyy-MM-dd}-%i.log.gz">
            <JsonLayout includeTimeMillis="true" complete="false" compact="true" eventEol="true" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>
    </Loggers>
</Configuration>